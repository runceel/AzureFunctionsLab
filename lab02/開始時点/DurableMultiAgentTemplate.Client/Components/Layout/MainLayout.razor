@inherits LayoutComponentBase

<FluentDesignTheme Mode="DesignThemeModes.Dark" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<FluentLayout>
    <FluentHeader>
        <FluentGrid Style="width: 100%;">
            <FluentGridItem xs="9">
                <FluentLabel Typo="Typography.H1">
                    Simple agent client
                </FluentLabel>
            </FluentGridItem>
            <FluentGridItem xs="3" Justify="JustifyContent.Center">
                <SectionOutlet SectionName="ToolBar" />
            </FluentGridItem>
        </FluentGrid>
    </FluentHeader>
    <FluentBodyContent>
        @Body
    </FluentBodyContent>
    <FluentFooter>
        <FluentStack HorizontalAlignment="HorizontalAlignment.End">
            <a href="https://github.com/07JP27/DurableMultiAgentTemplate/">Source code repository</a>
        </FluentStack>
    </FluentFooter>
</FluentLayout>
